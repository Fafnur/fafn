{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@fafn/components": ["libs/components/src/index.ts"],
      "@fafn/components/buttons": ["libs/components/buttons/src/index.ts"],
      "@fafn/components/cards": ["libs/components/cards/src/index.ts"],
      "@fafn/components/carousel": ["libs/components/carousel/src/index.ts"],
      "@fafn/components/container": ["libs/components/container/src/index.ts"],
      "@fafn/components/dialog": ["libs/components/dialog/src/index.ts"],
      "@fafn/components/divider": ["libs/components/divider/src/index.ts"],
      "@fafn/components/gallery": ["libs/components/gallery/src/index.ts"],
      "@fafn/components/grid": ["libs/components/grid/src/index.ts"],
      "@fafn/components/icon": ["libs/components/icon/src/index.ts"],
      "@fafn/components/layout": ["libs/components/layout/src/index.ts"],
      "@fafn/core": ["libs/core/src/index.ts"],
      "@fafn/core/testing": ["libs/core/testing/src/index.ts"],
      "@fafn/nativescript": ["libs/nativescript/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
